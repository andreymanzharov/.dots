{
    "layer": "top", // Waybar at top layer
    "position": "bottom", // Waybar position (top|bottom|left|right)
    "height": 24, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 0, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": ["hyprland/workspaces", "hyprland/submap"],
    "modules-center": ["hyprland/window"],
    "modules-right": ["cpu", "memory", "disk#root", "disk#home", "disk#docker", "wireplumber", "network", "idle_inhibitor", "clock", "hyprland/language", "tray"],
    // Modules configuration
    "hyprland/workspaces": {
        "disable-scroll": true,
        // "all-outputs": true,
        "format": "{name}: {icon}",
        "format-icons": {
            "1": "Ôíâ",
            "2": "Ôâ©",
            "3": "ÔÑ°",
            "9": "ÔêØ",
            "10": "Ôâ©",
            "urgent": "ÔÅ™",
            "default": "ÔÑå"
        },
        "on-click": "activate"
    },
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    },
    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },
    "tray": {
        // "icon-size": 21,
        "spacing": 10
    },
    "clock": {
        "interval": 20,
        "format": "{:%Y-%m-%d %H:%M} ÔÄó ",
        "today-format": "<span color='#b59a58'><b><u>{}</u></b></span>",
        "tooltip-format": "<tt>{calendar}</tt>",
        "calendar": {
                    "mode"          : "year",
                    "mode-mon-col"  : 3,
                    "on-scroll"     : 1,
                    "on-click-right": "mode",
                    "format": {
                              "months":     "<span color='#ffead3'><b>{}</b></span>",
                              "days":       "<span color='#ecc6d9'><b>{}</b></span>",
                              "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
                              "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
                              "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
                              }
                    },
    },
    "cpu": {
        "interval": 1,
        "format": "{usage:3d}% Óâ¶",
        "states": {
            "warning": 80,
            "critical": 90
        },
        "tooltip": false
    },
    "memory": {
        "interval": 5,
        "format": "{used:4.1f}GiB ÔÉâ",
        "states": {
            "warning": 75,
            "critical": 80
        },
        "tooltip": false
    },
    "disk#root": {
        "format": "{free} ÔÉá",
        "states": {
            "critical": 10
        }
    },
    "disk#home": {
        "format": "{free} ÔÄï",
        "states": {
            "critical": 10
        },
        "path": "/home"
    },
    "disk#docker": {
        "format": "{free} Ôåà",
        "states": {
            "critical": 10
        },
        "path": "/var/lib/docker"
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "interval": 30,
        "format-wifi": "{essid} ({signalStrength}%) Ôá´",
        "format-ethernet": "{ipaddr}/{cidr} Û∞±î",
        "tooltip-format": "{ifname} via {gwaddr} Û∞±î",
        "format-linked": "{ifname} (No IP) Û∞±ü",
        "format-disconnected": "Disconnected Û∞≤ú",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },
    "wireplumber": {
        "format": "{node_name} {volume}% {icon}",
        "format-muted": "ÔÄ¶",
        "on-click": "helvum",
        "format-icons": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
    },
    "sway/language": {
        "tooltip-format": "{long} {variant}"
    },
    "hyprland/language": {
        "format": "{}",
        "format-en": "üá∫üá∏",
        "format-ru": "üá∑üá∫"
    }
}
