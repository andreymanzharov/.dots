mode "exec" {
    bindsym Return exec $term; mode "default"

    bindsym --to-code f exec firefox; workspace number $w02; mode "default"
    bindsym --to-code n exec /opt/firefox/firefox --name firefox-nightly; workspace number $w10; mode "default"
    bindsym --to-code m exec thunderbird; workspace number $w09; mode "default"
    bindsym --to-code t exec telegram-desktop; mode "default"

    bindsym --to-code i exec idea; workspace number $w03; mode "default"

    bindsym Escape mode "default"
}
bindsym $mod+Return mode "exec"
